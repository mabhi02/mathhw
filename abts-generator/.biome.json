{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "../backend/**/*.py",
      "../backend/**/*.pyc",
      "../backend/**/__pycache__"
    ]
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "../backend/**/*.py",
      "../backend/**/*.pyc",
      "../backend/**/__pycache__"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingComma": "es5",
      "semicolons": "always"
    }
  }
} 